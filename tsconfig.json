{
    "include": [
        "src/**/*"
    ],
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "strict": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "suppressImplicitAnyIndexErrors": true,
        "declaration": true,
        "outDir": "./lib",
    }
}